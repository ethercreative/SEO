{% import "_includes/forms" as forms %}

{% set robots %}
	{% include 'seo/_seo/robots' with {
		robots: settings.robots
		? settings.robots
		: globalSettings is defined
		? globalSettings.robots,
		name: 'robots',
	} %}
{% endset %}
{{ forms.field(
	{
		label: 'Robots'|t('seo'),
		instructions: 'Set the default global robots directives. This can be changed on a per-entry basis'|t('seo'),
	},
	robots
) }}

{{ forms.textareaField({
	label: "robots.txt",
	instructions: "robots_instructions"|t('seo'),
	name: "robotsTxt",
	id: "robotsTxt",
	rows: 28,
	value: settings.robotsTxt
}) }}