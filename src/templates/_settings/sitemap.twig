{% import "_includes/forms" as forms %}

{{ forms.textField({
	label: "Sitemap Name"|t('seo'),
	instructions: "sitemap_instructions"|t('seo', params = { siteUrl: siteUrl, sitemapName: (settings.sitemapName ?? '') })
	name: "sitemapName",
	id: "sitemapName",
	value: settings.sitemapName is defined ? settings.sitemapName : ''
}) }}

{{ forms.textField({
	type: "number",
	label: "Pagination Limit"|t('seo'),
	instructions: "pagination_limit_instructions"|t('seo'),
	name: "sitemapLimit",
	id: "sitemapLimit",
	value: settings.sitemapLimit
}) }}

{{ forms.lightswitchField({
	label: "Remove alternate URLs from sitemap"|t('seo'),
	instructions: "If you check this checkbox, the alternate URLs will be removed from the sitemap"|t('seo'),
	id: "removeAlternateUrls",
	name: "removeAlternateUrls",
	on: settings.removeAlternateUrls,
	errors: settings.getErrors("removeAlternateUrls"),
}) }}
